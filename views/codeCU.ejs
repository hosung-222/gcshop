<div class="container">
  <% if (action == "/code/update_process") {%>
  <h2>코드 수정</h2>
  <% } else{ %>
  <h2>코드 입력</h2>
  <% } %>

  <form action="<%= action %>" method="post">
    <% if (action == "/code/update_process") {%>
    <input type="hidden" name="main_id" value="<%= code[0].main_id || '' %>" />
    <input type="hidden" name="sub_id" value="<%= code[0].sub_id || '' %>" />
    <% } %> <% if (action == "/code/create_process"){ %>

    <div class="mb-3">
      <label class="form-label" for="main_id">대분류</label>
      <input
        class="form-control"
        type="text"
        name="main_id"
        placeholder="0000"
        style="width: 300px"
      />
      <% } %>
    </div>

    <div class="mb-3">
      <label class="form-label" for="main_name">대분류명</label>
      <input
        class="form-control"
        type="text"
        name="main_name"
        style="width: 300px"
        value="<%= code[0].main_name || '' %>"
      />
    </div>
    <% if (action == "/code/create_process"){ %>
    <div class="mb-3">
      <label class="form-label" for="sub_id">소분류</label>
      <input
        class="form-control"
        type="text"
        name="sub_id"
        style="width: 300px"
      />
    </div>
    <% } %>
    <div class="mb-3">
      <label class="form-label" for="sub_name">소분류명</label>
      <input
        class="form-control"
        type="text"
        name="sub_name"
        style="width: 300px"
        value="<%= code[0].sub_name || '' %>"
      />
    </div>
    <div class="mb-3">
      <label class="form-label" for="start">시작일</label>
      <input
        class="form-control"
        type="text"
        name="start"
        id="start"
        style="width: 300px"
        value="<%= code[0].start || '' %>"
      />
    </div>
    <div class="mb-3">
      <label class="form-label" for="end">종료일</label>
      <input
        class="form-control"
        type="text"
        name="end"
        id="end"
        style="width: 300px"
        value="<%= code[0].end || '' %>"
      />
    </div>
    <button class="btn btn-outline-primary btn-sm" type="submit">입력</button>
  </form>
</div>
