<div class="container">
  <% if (action == "/person/update_process") {%>
  <h2>사용자 수정</h2>
  <% } else{ %>
  <h2>사용자 입력</h2>
  <% } %>

  <form action="<%= action %>" method="post">
    <% if (action == "/person/update_process") {%>
    <input
      type="hidden"
      name="loginid"
      value="<%=persons[0].loginid || '' %>"
    />
    <% } %> <% if (action == "/person/create_process"){ %>

    <div class="mb-3">
      <label class="form-label" for="loginid">아이디</label>
      <input
        class="form-control"
        type="text"
        name="loginid"
        style="width: 300px"
      />
      <% } %>
    </div>

    <div class="mb-3">
      <label class="form-label" for="password">비밀번호</label>
      <input class="form-control" type="text" name="password" style="width:
      300px" <% if (action == "/person/update_process") {%>
      value="<%=persons[0].password || '' %>" /> <% } %>
    </div>

    <div class="mb-3">
      <label class="form-label" for="name">이름</label>
      <input class="form-control" type="text" name="name" style="width: 300px"
      <% if (action == "/person/update_process") {%> value="<%=persons[0].name
      || '' %>" /> <% } %>
    </div>
    <div class="mb-3">
      <label class="form-label" for="address">주소</label>
      <input class="form-control" type="text" name="address" style="width:
      300px" <% if (action == "/person/update_process") {%>
      value="<%=persons[0].address || '' %>" /> <% } %>
    </div>
    <div class="mb-3">
      <label class="form-label" for="tel">전화번호</label>
      <input class="form-control" type="text" name="tel" id="tel" style="width:
      300px" <% if (action == "/person/update_process") {%>
      value="<%=persons[0].tel || '' %>" /> <% } %>
    </div>
    <div class="mb-3">
      <label class="form-label" for="birth">생일</label>
      <input class="form-control" type="text" name="birth" id="birth"
      style="width: 300px" <% if (action == "/person/update_process") {%>
      value="<%=persons[0].birth || '' %>" /> <% } %>
    </div>
    <div class="mb-3">
      <label class="form-label" for="class">클래스</label>
      <input class="form-control" type="text" name="class" id="class"
      style="width: 300px" <% if (action == "/person/update_process") {%>
      value="<%=persons[0].class || '' %>" /> <% } %>
    </div>
    <div class="mb-3">
      <label class="form-label" for="point">포인트</label>
      <input class="form-control" type="text" name="point" id="point"
      style="width: 300px" <% if (action == "/person/update_process") {%>
      value="<%=persons[0].point || '' %>" /> <% } %>
    </div>
    <button class="btn btn-outline-primary btn-sm" type="submit">입력</button>
  </form>
</div>
